<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.item.dao.ItemLikeDAO">
<resultMap type="ItemLikeVO" id="itemLikeMap" autoMapping="true">
	<association property="item" javaType="ItemVO" autoMapping="true"/>
	<association property="user" javaType="UsersVO" autoMapping="true"/>
</resultMap>
<select id="selectItemLikeList" resultMap="itemLikeMap">
	SELECT
	    ITEM_LIKE_CODE,
	    ITEM_CODE,
	    USER_ID
	FROM
	    ITEM_LIKE
</select>

<insert id="insertItemLike" parameterType="ItemLikeVO">
	<selectKey order="BEFORE" resultType="string" keyProperty="itemLikeCode">
	SELECT 'I_LIKE' || 
			LPAD(NVL(TO_NUMBER(SUBSTR(MAX(ITEM_LIKE_CODE), 7)), 0)+1, 5, '0')
	FROM ITEM_LIKE
	</selectKey>

	INSERT INTO ITEM_LIKE (
	    ITEM_LIKE_CODE,
	    ITEM_CODE,
	    USER_ID
	) VALUES (
	    #{itemLikeCode},
	    #{itemCode},
	    #{userId}
	)
</insert>

</mapper>